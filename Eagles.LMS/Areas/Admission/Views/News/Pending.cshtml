

@{
    ViewBag.Title = "Pending";
    Layout = "~/Areas/Admission/Views/Shared/_Layout.cshtml";
    int index = 1;
    var ctx = new Eagles.LMS.BLL.UnitOfWork();

}


<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">
                    <a href="/Admission/News/Create" class="btn btn-success waves-effect waves-light"> <i class="bx bx-plus font-size-16 align-middle me-2"></i> Add News</a>
                </h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission">Home</a></li>
                        <li class="breadcrumb-item active">News</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" style="padding-bottom:30px;">

                        <table id="table_Slider" class=" table table-bordered tableOtherdite">
                            <thead class="DarkThead">
                                <tr>

                                    <th><p>Order</p></th>
                                    <th><p>Action</p></th>
                                    <th> <p>Accept</p> </th>
                                    <th> <p>Refused</p> </th>
                                    <th><p>Show Home</p></th>

                                    <th> <p>Main Image</p> </th>
                                    <th> <p>Title  Arabic</p> </th>
                                    <th> <p>Title  English</p> </th>

                                    <th> <p>Short Description AR </p></th>
                                    <th> <p>Short Description EN</p> </th>
                                    @*<th> <p>Description  Arabic</p> </th>
                                        <th> <p>Description  English</p> </th>*@
                                    <th> <p>News Date</p> </th>

                                    <th> <p>User Created</p> </th>
                                    <th> <p>Created Time</p> </th>


                                </tr>
                            </thead>


                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><p>@item.Order</p></td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn nav-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="bx bx-dots-horizontal-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu dropdown-menu-end">
                                                    <a class="dropdown-item align-middle " href="/Admission/News/Edit/@item.Id"><i class="bx bx-edit font-size-16 me-1"></i>@Resources.Global.Edit</a>
                                                    <a class="dropdown-item text-danger align-middle btn_delete" data-id="@item.Id" href="#"><i class="bx bx-trash font-size-16 me-1"></i>@Resources.Global.Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <a class="btn btn-success align-middle btn_changeStatus d-block" data-id="@item.Id" style="width:max-content" data-name="Approval"><i class="bx bx-check font-size-16 me-1"></i>Approval</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-danger align-middle btn_changeStatus d-block" style="width:max-content" data-id="@item.Id" data-name="Rejected"><i class="bx bx-x font-size-16 me-1"></i>Reject</a>
                                        </td>
                                        <td><p>@item.ShowInHomePage</p></td>

                                        <td>
                                            <a href="@item.MainImage" class="btnIconImages" target="_blank">
                                                <i class="bx bx-image"></i>
                                            </a>
                                        </td>
                                        <td><p class="FontArabic">@item.TitleArabic</p></td>
                                        <td><p>@item.TitleEnglish</p></td>
                                        <td><p class="FontArabic DescriptionP">@item.ShortDescriptionArabic</p></td>
                                        <td><p class="DescriptionP">@item.ShortDescriptionEnglish</p></td>
                                        @*<td><p class="DescriptionP FontArabic">@Html.Raw(@item.DescriptionArabic)</p></td>
                                            <td><p class="DescriptionP">@Html.Raw(@item.DescriptionEnglish)</p></td>*@

                                        <td><p class="">@item.NewsDate</p></td>


                                        <td><p>@ctx.UserManager.GetBy(item.UserCreateId).FullName</p></td>
                                        <td><p>@item.CreatedTime</p></td>

                                        @*<td>
                                                <div class="dropdown">
                                                    <button class="btn nav-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="bx bx-dots-horizontal-rounded"></i>
                                                    </button>
                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <a class="dropdown-item align-middle text-success btn_changeStatus" data-id="@item.Id" data-name="Approval" href="#"><i class="bx bx-check font-size-16 me-1"></i>Approval</a>
                                                        <a class="dropdown-item align-middle text-danger btn_changeStatus" data-id="@item.Id" data-name="Rejected" href="#"><i class="bx bx-x font-size-16 me-1"></i>Reject</a>
                                                        <a class="dropdown-item align-middle " href="/Admission/News/Edit/@item.Id"><i class="bx bx-edit font-size-16 me-1"></i>@Resources.Global.Edit</a>
                                                        <a class="dropdown-item text-danger align-middle btn_delete" data-id="@item.Id" href="#"><i class="bx bx-trash font-size-16 me-1"></i>@Resources.Global.Delete</a>

                                                    </div>
                                                </div>
                                            </td>*@
                                    </tr>
                                    {
                                        index += 1;
                                    }
                                }

                            </tbody>





                        </table>
                    </div>



                </div>
            </div>
        </div> <!-- end col -->

    </div>

</div>




<div class="modal fade ModalShowImage" id="imagesPrivew" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="imagesCOntent">
                    <img src="~/assets_NewDash/images/companies/img-4.png" />
                </div>
            </div>

        </div>
    </div>
</div>



<div class="modal fade ModalShowImage" id="VedioPriview" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="imagesCOntent">
                    <video controls="controls">
                        <source src="~/assets_NewDash/Vedios/1.mp4" type="video/mp4" />
                    </video>
                </div>
            </div>

        </div>
    </div>
</div>

@section EndBody{
    <script>
        $(function () {

  $("body").on("click", ".btn_delete", (s) => {
                let self = $(s.currentTarget),
                    entityId = self.attr('data-id');
                bootbox.confirm("@Resources.Global.ConfirmDeleteoperation !", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/Admission/News/Delete/" + entityId+"",
                            success: (response) => {
                                toastr.success('@Resources.Global.Theunithasbeensuccessfullydeleted', '', { timeOut: 10000 });
                                self.closest('tr').remove();
                            }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })


  });

            $("body").on("click", ".btn_changeStatus", (s) => {
                let self = $(s.currentTarget),
                    entityId = self.attr('data-id'),
                    dataName = self.attr('data-name');
                bootbox.confirm("Confirm " + dataName+" Object", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/Admission/News/Pending?id=" + entityId + "&status=" + dataName+"",
                            success: (response) => {
                                toastr.success('The Object Has Been Successfully ' + dataName+'', '', { timeOut: 10000 });
                                self.closest('tr').remove();
                            }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })


            });
        });
    </script>

}