@model New
@{
    ViewBag.Title = "Create-New";
    Layout = "~/Areas/Admission/Views/Shared/_Layout.cshtml";
    var requestStatus = TempData.Peek("RequestStatus") as RequestStatus;

}
@section EndHeader{


}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Add New</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission/News">Home</a></li>
                        <li class="breadcrumb-item active">Create-New</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    @*<div class="row">
            <input type="date" required  class="form-control" />
            <button type="submit" OnClick="return validate();">ssss</button>
        </div>*@


    <div class="row">
        <div class="MaxOrder">
            <div class="alert-danger">
                Max-Order : @ViewBag.MaxOrder
            </div>


        </div>

        @using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">



                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="row">


                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Title Arabic</label>
                                            @Html.TextBoxFor(s => s.TitleArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Title Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Title English</label>
                                            @Html.TextBoxFor(s => s.TitleEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Title English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Short Description AR</label>
                                            @Html.TextAreaFor(s => s.ShortDescriptionArabic, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Description English",
                                           //@required = "required"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.ShortDescriptionArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Short Description EN</label>
                                            @Html.TextAreaFor(s => s.ShortDescriptionEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Description English",
                                           @required = "required"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.ShortDescriptionEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description Arabic</label>
                                            @Html.TextAreaFor(s => s.DescriptionArabic, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.DescriptionArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description English</label>
                                            @Html.TextAreaFor(s => s.DescriptionEnglish, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.DescriptionEnglish)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label for="uploadattachments" class="form-label">Main Image <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:1520px, H:850px)</span></label>
                                            <input class="form-control" name="uploadattachments" type="file" id="uploadattachments">
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label for="uploadattachments_multi" class="form-label">
                                                New Images [Optional] <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:1520px, H:850px)</span>
                                            </label>
                                            <input multiple class="form-control" name="uploadattachments_multi" type="file" id="uploadattachments_multi">
                                        </div>
                                    </div>


                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Nots Arabic</label>
                                            @Html.TextBoxFor(s => s.NotsArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Nots Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.NotsArabic)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Nots English</label>
                                            @Html.TextBoxFor(s => s.NotsEnglish, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Nots English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.NotsEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Order</label>
                                            @Html.TextBoxFor(s => s.Order, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Order"
                                       })
                                            @Html.ValidationMessageFor(s => s.Order)
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">News Date</label>
                                            @Html.TextBoxFor(s => s.NewsDate, null, new
                                       {
                                           @class = "form-control",
                                           type = "date",
                                           @id = "NewsDate",
                                           @required = "required",
                                           placeholder = "News Date"
                                       })
                                            @Html.ValidationMessageFor(s => s.NewsDate)
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-check form-check-primary mb-3">
                                            @Html.CheckBoxFor(s => s.ShowInHomePage, new
                                       {
                                           @class = "form-check-input",
                                           @id = "ckekshow",
                                           placeholder = "Show In Home Page"
                                       })
                                            <label for="ckekshow" class="form-label" style="cursor:pointer;">Show In Home Page</label>

                                        </div>


                                    </div>


                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label for="uploadattachmentsHomeMain" class="form-label">Home Main Image <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:270px, H:350px)</span></label>
                                            <input class="form-control" name="uploadattachmentsHomeMain" type="file" id="uploadattachmentsHomeMain">
                                        </div>
                                    </div>


                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div> <!-- end col -->



            <div class="col-12">
                <div class="card">
                    <h4 class="card-title btn-dark m-0 text-white p-3">SEO</h4>
                    <div class="card-body">


                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Page Title English</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOTitleEnglish, new
                           {
                               @class = "form-control ",
                               placeholder = "Page Title "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Page Title Arabic</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOTitleArabic, new
                           {
                               @class = "form-control FontCairo ",
                               placeholder = "Page Title "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta Description Arabic </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaDescriptionArabic, new
                           {
                               @class = "form-control FontCairo",
                               placeholder = "Meta keywords "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta Description English</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaDescriptionEnglish, new
                           {
                               @class = "form-control ",
                               placeholder = "Meta keywords "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta keywords Arabic</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaKeywordsArabic, new
                           {
                               @class = "form-control FontCairo",
                               placeholder = "Meta Description "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta keywords English</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaKeywordsEnglish, new
                           {
                               @class = "form-control ",
                               placeholder = "Meta Description "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Canonical Url</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOCanonicalUrl, new
                           {
                               @class = "form-control ",
                               placeholder = "Canonical Url "
                           })
                            </div>
                        </div>
                    </div>
                </div>
            </div>




            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="foooterbuttons">
                            <button type="submit" OnClick="return validate();" class="btn btn-success waves-effect waves-light">
                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i> @Resources.Global.Save
                            </button>
                            <a href="/Admission/News" class="btn btn-danger waves-effect waves-light">
                                <i class="fa fa-backspace back font-size-16 align-middle me-2"></i> @Resources.Global.Back
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>





</div>


@section EndBody{



    <script type="text/javascript">


        function validate() {
            var uploadattachments = document.getElementById('uploadattachments');
            if ($(uploadattachments)[0].files[0] != null) {
                var numb = $(uploadattachments)[0].files[0].size / 1024 / 1024;
                numb = numb.toFixed(2);
                if (numb > 1) {
                    /*       alert('to big, maximum is 2MiB. You file size is: ' + numb + ' MiB');*/
                    notify = $.notify({
                        message: ' mainImage Is To Big, Maximum Size To Upload Is 1 MiB. Your Image Size Is: ' + numb + ' MiB',

                    }, {

                        type: '' == 'Created' ? "success" : "danger",
                        animate: {
                            enter: 'animated flipInY',
                            exit: 'animated flipOutX',
                        }
                    });
                    return false;
                }
            }

            var uploadattachmentsHomeMain = document.getElementById('uploadattachmentsHomeMain');
            if ($(uploadattachmentsHomeMain)[0].files[0] != null) {
                var numbuploadattachmentsHomeMain = $(uploadattachmentsHomeMain)[0].files[0].size / 1024 / 1024;
                numbuploadattachmentsHomeMain = numbuploadattachmentsHomeMain.toFixed(2);
                if (numbuploadattachmentsHomeMain > 1) {
                    /*       alert('to big, maximum is 2MiB. You file size is: ' + numb + ' MiB');*/
                    notify = $.notify({
                        message: ' Main Home Image Is To Big, Maximum Size To Upload Is 1 MiB. Your Image Size Is: ' + numbuploadattachmentsHomeMain + ' MiB',

                    }, {

                        type: '' == 'Created' ? "success" : "danger",
                        animate: {
                            enter: 'animated flipInY',
                            exit: 'animated flipOutX',
                        }
                    });
                    return false;
                }
            }


            
            var uploadattachments_multi = document.getElementById('uploadattachments_multi');
            if ($(uploadattachments_multi)[0].files[0] != null) {
                var numbTwo = $(uploadattachments_multi)[0].files[0].size / 1024 / 1024;
                numbTwo = numbTwo.toFixed(2);
                if (numbTwo > 1) {
                    notify = $.notify({
                        message: ' Images Is To Big, Maximum Size To Upload Is 1 MiB. Your Image Size Is: ' + numbTwo + ' MiB',

                    }, {

                        type: '' == 'Created' ? "success" : "danger",
                        animate: {
                            enter: 'animated flipInY',
                            exit: 'animated flipOutX',
                        }
                    });
                    return false;
                }
            }

        }
    </script>





    <script type="text/javascript">
        function validate() {
            var NewsDate = document.getElementById('NewsDate').value;
            if (NewsDate == "") {

                notify = $.notify({
                    message: 'Pls Enter Date',

                }, {

                    type: 'NewsDate' == 'Created' ? "success" : "danger",
                    animate: {
                        enter: 'animated flipInY',
                        exit: 'animated flipOutX',
                    }
                });

                return false;
            }
        }
    </script>
    @*<script>
            $(function (e) {
                $('.TextEditor1').richText();
                $('.TextEditor2').richText();
            });
        </script>*@


    @if (requestStatus != null)
    {

        <script>

              notify = $.notify({
                  message: '@requestStatus.Message',

              }, {

                      type: '@requestStatus.Status' == 'Created' ? "success" :"danger",
                      animate: {
                          enter: 'animated flipInY',
                          exit: 'animated flipOutX',
                      }
                  });
        </script>

        TempData.Remove("RequestStatus");
    }
}

