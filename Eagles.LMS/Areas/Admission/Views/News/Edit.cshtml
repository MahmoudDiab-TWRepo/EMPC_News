@model New
@{
    ViewBag.Title = "Edit-New";
    Layout = "~/Areas/Admission/Views/Shared/_Layout.cshtml";
    var requestStatus = TempData.Peek("RequestStatus") as RequestStatus;


}
@section EndHeader{
    <style>
        .ImagesGroup .ImageItem .DeletemainImg {
            position: absolute;
            top: 15px;
            right: 15px
        }

            .ImagesGroup .ImageItem .DeletemainImg .btn_delete {
                display: block;
                width: 45px;
                height: 45px;
                background-color: #f46a6acc;
                border-color: #f46a6a;
                text-align: center;
                line-height: 45px;
                border-radius: 50%;
                color: #fff;
                padding: 0;
                font-size: 19px;
                cursor: pointer;
                transition: all .4s ease-in-out;
            }

                .ImagesGroup .ImageItem .DeletemainImg .btn_delete:hover {
                    background-color: #f46a6a;
                }
    </style>

}
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">Edit New</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission/News">Home</a></li>
                        <li class="breadcrumb-item active">Edit-New</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="MaxOrder">
            <div class="alert-danger">
                Max-Order : @ViewBag.MaxOrder
            </div>


        </div>
        @using (Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(s => s.Id)
            @Html.HiddenFor(s => s.MainImage)
            @Html.HiddenFor(s => s.MainHomeImage)
            @Html.HiddenFor(s => s.CreatedTime)
            @Html.HiddenFor(s => s.UserCreateId)
            @Html.HiddenFor(s => s.Status)

            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">



                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="row">


                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Title Arabic</label>
                                            @Html.TextBoxFor(s => s.TitleArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Title Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Title English</label>
                                            @Html.TextBoxFor(s => s.TitleEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Title English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.TitleEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Short Description AR</label>
                                            @Html.TextAreaFor(s => s.ShortDescriptionArabic, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Description Arabic"
                                           //@required = "required"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.ShortDescriptionArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Short Description EN</label>
                                            @Html.TextAreaFor(s => s.ShortDescriptionEnglish, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Description English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.ShortDescriptionEnglish)*@
                                        </div>
                                    </div>


                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description Arabic</label>
                                            @Html.TextAreaFor(s => s.DescriptionArabic, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.DescriptionArabic)*@
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Description English</label>
                                            @Html.TextAreaFor(s => s.DescriptionEnglish, new
                                       {
                                           @class = "form-control textarea",
                                           placeholder = "Description English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.DescriptionEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Order</label>
                                            @Html.TextBoxFor(s => s.Order, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Order"
                                       })
                                            @Html.ValidationMessageFor(s => s.Order)
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">News Date</label>
                                            @Html.TextBoxFor(s => s.NewsDate, "{0:yyyy-MM-dd}", new
                                       {
                                           @class = "form-control",
                                           type = "date",
                                           placeholder = "News Date"
                                       })
                                            @Html.ValidationMessageFor(s => s.NewsDate)
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Nots Arabic</label>
                                            @Html.TextBoxFor(s => s.NotsArabic, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Nots Arabic"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.NotsArabic)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">Nots English</label>
                                            @Html.TextBoxFor(s => s.NotsEnglish, null, new
                                       {
                                           @class = "form-control",
                                           placeholder = "Nots English"
                                       })
                                            @*@Html.ValidationMessageFor(s => s.NotsEnglish)*@
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label for="uploadattachments" class="form-label">Main Image <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:1520px, H:850px)</span></label>
                                            <input class="form-control" name="uploadattachments" type="file" id="uploadattachments">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12">
                                        <div class="mb-3">
                                            @if (Model != null && Model.MainImage != null && Model.MainImage != "")
                                            {
                                                <div id="box_mainImg" class="row">
                                                    <div class="col-lg-4">
                                                        <div class="ImagesGroup">
                                                            <div class="ImageItem">
                                                                <div class="Images">
                                                                    <img src="@Model.MainImage" />
                                                                </div>
                                                                @*<div class="DeletemainImg">
                                                                        <a class="btn_deleteMainImage" data-id="@Model.Id"><i class="bx bx-trash"></i></a>
                                                                    </div>*@
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>




                                                @*<img style="max-width: auto; height: 210px " src="@Model.MainImage" />*@
                                            }
                                        </div>
                                    </div>



                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="mb-3">
                                            <label for="uploadattachments_multi" class="form-label">
                                                New Images [Optional] <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:1520px, H:850px)</span>
                                            </label>
                                            <input multiple class="form-control" name="uploadattachments_multi" type="file" id="uploadattachments_multi">
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="mb-3">
                                            <label class="form-label">News Images</label>
                                            @if (Model.NewImages != null && Model.NewImages.Any())
                                            {

                                                <div class="ImagesGroup">
                                                    <div class="row">
                                                        @foreach (var item in Model.NewImages)
                                                        {
                                                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 parentBox">
                                                                <div class="ImageItem">
                                                                    <div class="Images">
                                                                        <img src="@item.Path" />
                                                                    </div>
                                                                    <div class="DeleteBtn">
                                                                        <a class=" btn_delete" data-id="@item.Id"><i class="bx bx-trash"></i></a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>


                                                @*<table class="">
                                                        <tr>
                                                            <th>IMG</th>
                                                            <th>Remove</th>
                                                        </tr>
                                                        @foreach (var item in Model.NewImages)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <img style="width:100px;height:100px" src="@item.Path" />
                                                                </td>
                                                                <td>
                                                                    <a class="dropdown-item text-danger align-middle btn_delete" data-id="@item.Id" href="#"><i class="bx bx-trash font-size-16 me-1"></i>Delete</a>

                                                                </td>
                                                            </tr>
                                                        }
                                                    </table>*@
                                            }

                                        </div>
                                    </div>



                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-check form-check-primary mb-3">
                                            @Html.CheckBoxFor(s => s.ShowInHomePage, new
                                       {
                                           @class = "form-check-input",
                                           @id = "ckekshow",
                                           placeholder = "Show In Home Page"
                                       })
                                            <label for="ckekshow" class="form-label" style="cursor:pointer;">Show In Home Page</label>

                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"></div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                <div class="mb-3">
                                                    <label for="uploadattachmentsHomeMain" class="form-label">Main Home Image <span class="extiniosType">(jpg, png, peg, gif, jpg)</span><span class="extiniosType">(W:270px, H:350px)</span></label>
                                                    <input class="form-control" name="uploadattachmentsHomeMain" type="file" id="uploadattachmentsHomeMain">
                                                </div>
                                            </div>
                                            <div class="col-lg-12 col-md-12">
                                                <div class="mb-3">
                                                    @if (Model != null && Model.MainHomeImage != null && Model.MainHomeImage != "")
                                                    {
                                                        <div id="box_mainImgTwo" class="row">
                                                            <div class="col-lg-4">
                                                                <div class="ImagesGroup">
                                                                    <div class="ImageItem">
                                                                        <div class="Images">
                                                                            <img src="@Model.MainHomeImage" />
                                                                        </div>
                                                                        <div class="DeleteBtn">
                                                                            <a class=" btn_delete_MainTwo" data-id="@Model.Id"><i class="bx bx-trash"></i></a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div> <!-- end col -->


            <div class="col-12">
                <div class="card">
                    <h4 class="card-title btn-dark m-0 text-white p-3">SEO</h4>
                    <div class="card-body">


                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Page Title English</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOTitleEnglish, new
                           {
                               @class = "form-control ",
                               placeholder = "Page Title "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Page Title Arabic</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOTitleArabic, new
                           {
                               @class = "form-control FontCairo ",
                               placeholder = "Page Title "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta Description Arabic </label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaDescriptionArabic, new
                           {
                               @class = "form-control FontCairo",
                               placeholder = "Meta keywords "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta Description English</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaDescriptionEnglish, new
                           {
                               @class = "form-control ",
                               placeholder = "Meta keywords "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta keywords Arabic</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaKeywordsArabic, new
                           {
                               @class = "form-control FontCairo",
                               placeholder = "Meta Description "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Meta keywords English</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOMetaKeywordsEnglish, new
                           {
                               @class = "form-control ",
                               placeholder = "Meta Description "
                           })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-md-2 col-form-label"> Canonical Url</label>
                            <div class="col-md-10">
                                @Html.TextBoxFor(s => s.SEOCanonicalUrl, new
                           {
                               @class = "form-control ",
                               placeholder = "Canonical Url "
                           })
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="foooterbuttons">
                            <button type="submit" class="btn btn-success waves-effect waves-light">
                                <i class="bx bx-check-double font-size-16 align-middle me-2"></i> @Resources.Global.Save
                            </button>
                            <a href="/Admission/News" class="btn btn-danger waves-effect waves-light">
                                <i class="fa fa-backspace back font-size-16 align-middle me-2"></i> @Resources.Global.Back
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>

</div>


@section EndBody{

    <script>
        $(function () {

  $("body").on("click", ".btn_delete", (s) => {
                let self = $(s.currentTarget),
                    entityId = self.attr('data-id');
                bootbox.confirm("@Resources.Global.ConfirmDeleteoperation !", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/api/GlobalServices/RemoveNewsImg?id=" + entityId+"",
                            success: (response) => {
                                toastr.success('@Resources.Global.Theunithasbeensuccessfullydeleted', '', { timeOut: 10000 });
                                self.closest('.parentBox').remove();
                            }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })
            });
        });

        $("body").on("click", ".btn_deleteMainImage", (s) => {
            let self = $(s.currentTarget),

                    entityId = self.attr('data-id');
                bootbox.confirm("@Resources.Global.ConfirmDeleteoperation !", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/api/GlobalServices/RemoveNewsMainImg?id=" + entityId+"",
                            success: (response) => {
                                toastr.success('@Resources.Global.Theunithasbeensuccessfullydeleted', '', { timeOut: 10000 });
                                $('#box_mainImg').remove();
                                location.reload();
                                location.reload;
                                }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })
            });



        $("body").on("click", ".btn_delete_MainTwo", (s) => {
            let self = $(s.currentTarget),

                    entityId = self.attr('data-id');
                bootbox.confirm("@Resources.Global.ConfirmDeleteoperation !", function (flag) {
                    if (flag) {
                        $.ajax({
                            type: "POST",
                            url: "/api/GlobalServices/RemoveNewsMainTwoImg?id=" + entityId+"",
                            success: (response) => {
                                toastr.success('@Resources.Global.Theunithasbeensuccessfullydeleted', '', { timeOut: 10000 });
                                $('#box_mainImgTwo').remove();
                                location.reload();
                                location.reload;
                                }, error: (error) => {
                                // unauthorize
                                let errorMessage = manageAjaxError(error);
                                pushNotification("danger", errorMessage);
                            }
                        });
                    }
                })
            });


    </script>


    @if (requestStatus != null)
    {

        <script>

              notify = $.notify({
                  message: '@requestStatus.Message',

              }, {

                  type: '@requestStatus.Status' == 'Edited' ? "success" :"danger",
                      animate: {
                          enter: 'animated flipInY',
                          exit: 'animated flipOutX',
                      }
                  });
        </script>

        TempData.Remove("RequestStatus");
    }
}

