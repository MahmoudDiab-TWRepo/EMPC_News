<div class="container-fluid" ng-controller="groupsCtrl" id="kt_content">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0 font-size-18">@Resources.Global.GroupsAndPermissions</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="/Admission">Home</a></li>
                        <li class="breadcrumb-item active">@Resources.Global.GroupsAndPermissions</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="mb-3 row">
                        <div class="col-xl-6">



                            <form>
                                <div class="mb-3">
                                    <label for="formrow-firstname-input" class="form-label">@Resources.Global.GroupName</label>
                                    <input ng-model="txt_groupName" placeholder=" Group name" type="text" class="form-control">
                                </div>
                                <div class="m-3">
                                    <div id="jstree">
                                    </div>

                                </div>



                                <div>



                                </div>
                            </form>
                        </div>

                        <!-- end col -->
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="foooterbuttons">
                        <button ng-click="Update()" type="button" class="btn btn-success waves-effect waves-light">
                            <i class="bx bx-check-double font-size-16 align-middle me-2"></i> @Resources.Global.Save
                        </button>
                        <a href="/Admission/Groups" class="btn btn-danger waves-effect waves-light">
                            <i class="fa fa-backspace back font-size-16 align-middle me-2"></i> @Resources.Global.Back
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>






















































