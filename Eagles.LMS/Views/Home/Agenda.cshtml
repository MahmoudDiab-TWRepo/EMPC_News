
@{
    ViewBag.Title = "Agenda";
    Layout = "~/Views/Shared/_Layout.cshtml";

    UnitOfWork ctx = new UnitOfWork();

    bool en = true;

    if (Request.Cookies["Language"] != null)
    {
        en = (Request.Cookies["Language"].Value.ToString() == "en") ? true : false;

    }

    var _date = ViewBag.Date;

    List<Agenda> _Agendas;

    if (_date != null)
    {

        var _x = Convert.ToDateTime(_date).Date;

        _Agendas = ctx.AgendaManager.GetAll().Where(s => s.Status == EntityStatus.Approval && s.AgendaDate.Date == _x).ToList();
    }
    else
    {
        _Agendas = ctx.AgendaManager.GetAll().OrderByDescending(s => s.AgendaDate).Where(s => s.Status == EntityStatus.Approval).ToList();

    }
    if (en == true)
    {
        _Agendas = _Agendas.Where(s => s.TitleEnglish != null).ToList();
    }
    else
    {
        _Agendas = _Agendas.Where(s => s.TitleArabic != null).ToList();
    }
}


