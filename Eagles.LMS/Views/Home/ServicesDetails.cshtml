    <div class="ClassImaesBG">
        <img src="~/assets_NewPublic/images/bg/NEWBG/ServiceNewGB.jpg" />
    </div>
    <div class="PageTitleCOnt">
        <div class="container">
            <div class="row">

                <div class="col-md-12">

                    <div class="title-header">


                        @if (en)
                        {


                            <h3>@Model.TitleEnglish</h3>
                        }
                        else
                        {

                            <h3>@Model.TitleArabic</h3>
                        }

                        <div class="breadcrumbs">
                            <ul>
                                <li><a href="/Home">@Resources.Global.Home</a> > </li>
                                <li><a href="/Home/Services">@Resources.Global.services</a></li>
                            </ul>
