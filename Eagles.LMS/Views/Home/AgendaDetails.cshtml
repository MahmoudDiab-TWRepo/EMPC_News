@model Eagles.LMS.Models.Agenda
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    UnitOfWork ctx = new UnitOfWork();
    var SEO = ctx.SEOManager.GetAll().FirstOrDefault();
    bool en = true;

    if (Request.Cookies["Language"] != null)
    {
        en = (Request.Cookies["Language"].Value.ToString() == "en") ? true : false;

    }
}




@if (en)
{
    @section PageTitle{
        <title>@Model.TitleEnglish</title>
    }
    @section metatags{
        <meta name="keywords" content="@Model.TitleEnglish, @Model.TitleArabic, @Model.SEOMetaKeywordsEnglish, @SEO.AgendaPageMetaKeywordsEnglish " />
        <meta name="description" id="metaDesc" content="@Model.TitleEnglish, @Model.TitleArabic,  @Model.SEOMetaDescriptionEnglish, @SEO.AgendaPageMetaDescriptionEnglish" />
        <link rel="canonical" id="canonicalUrl" href="@SEO.AgendaPageCanonicalUrl" />
    }
}
else
{
    @section PageTitle{
        <title>@Model.TitleArabic</title>
    }
    @section metatags{
        <meta name="keywords" content="@Model.TitleEnglish, @Model.TitleArabic, @Model.SEOMetaKeywordsArabic, @SEO.AgendaPageMetaKeywordsArabic " />
        <meta name="description" id="metaDesc" content="@Model.TitleEnglish, @Model.TitleArabic,  @Model.SEOMetaDescriptionArabic, @SEO.AgendaPageMetaDescriptionArabic" />
        <link rel="canonical" id="canonicalUrl" href="@SEO.AgendaPageCanonicalUrl" />
    }
}






@section EndHeader{

    <style>
        .menu li a.active-a5 {
            color: #af7a2c;
            border-bottom: 1px solid #fff0;
            font-weight: 500;
        }
    </style>

    <link href="~/assets_NewPublic/libs/magnific-popup/magnific-popup.css" rel="stylesheet" />
}



<div class="header-bc">
    <div class="ClassImaesBG">
        <img src="~/assets_NewPublic/images/bg/NEWBG/NewNewsGBIN.jpg" alt="NewNewsGBIN.jpg" />
    </div>
    <div class="PageTitleCOnt">
        <div class="container">
            <div class="row">

                <div class="col-md-8">

                    <div class="title-header">

                        <h3>Agenda Details</h3>

                        <div class="breadcrumbs">
                            <ul>
                                <li><a href="#">@Resources.Global.Home</a> > </li>
                                <li>
                                    <A href="/Home/Agenda">@Resources.Global.Agenda</A> >
                                </li>
                            </ul>
                        </div>
                        <!--end breadcrumb-->

                    </div>
                    <!--end title-header-->

                </div>
                <!--end col-6-->



            </div>
            <!--end row-->
        </div>
        <!--end container-->

    </div>
</div>
<!--end header-bc-->



<div class="news">
    <div class="container">
        <div class="row">

            <div class="new-description">

                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        @if (Model.AgendaImages != null && Model.AgendaImages.Any())
                        {
                            foreach (var item in Model.AgendaImages)
                            {
                                <li></li>
                            }
                        }
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner popup-gallery" role="listbox">
                        <div class="item active">
                            @*<img src="@Model.MainImage" alt="...">*@
                            <div class="CauroselItemImg">
                                @if (!string.IsNullOrEmpty(Model.MainImage))
                                {

                                    <a href="@Model.MainImage">
                                        <div class=" imagsBG" style="background-image: url(@Model.MainImage)"></div>
                                    </a>
                                }
                                else
                                {
                                    <a href="~/assets_NewPublic/images/f14.jpeg">
                                        <div class=" imagsBG" style="background-image: url(/assets_NewPublic/images/f14.jpeg)"></div>
                                    </a>


                                }


                            </div>

                        </div>
                        @if (Model.AgendaImages != null && Model.AgendaImages.Any())
                        {
                            foreach (var item in Model.AgendaImages)
                            {
                                <div class="item">
                                    @*<img src="@item.Path" alt="...">*@
                                    <div class="CauroselItemImg">
                                        <a href="@item.Path">
                                            <div class=" imagsBG" style="background-image: url(@item.Path)"></div>
                                        </a>
                                    </div>
                                </div>
                            }
                        }



                        @*<div class="item active">
                                <img src="~/assets_NewPublic/images/bg_1.jpg" alt="...">

                            </div>
                            <div class="item">
                                <img src="~/assets_NewPublic/images/bg_3.jpg" alt="...">

                            </div>

                            <div class="item">
                                <img src="~/assets_NewPublic/images/bg_3.jpg" alt="...">

                            </div>*@

                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>


                <div class="data-new">

                    @if (en)
                    {
                        <h3>@Model.TitleEnglish</h3>


                        <h1 class="Date"><span><i class="fa fa-calendar"></i></span> @Model.AgendaDate.ToShortDateString()</h1>


                        <p>
                            @Html.Raw(@Model.DescriptionEnglish)
                        </p>


                    }
                    else
                    {
                        <h3>@Model.TitleArabic</h3>


                        <h1 class="Date"><span><i class="fa fa-calendar"></i></span> @Model.AgendaDate.ToShortDateString()</h1>



                        <p>
                            @Html.Raw(@Model.DescriptionArabic)
                        </p>


                    }





                    @*<div class="share-face">
                            <p> Share</p>

                            <a href="https://facebook.com/sharer/sharer.php?u=" target="_blank" rel="nofollow" class="fa fa-facebook"></a>
                            <a href="https://twitter.com/intent/tweet/?text=&amp;url=" target="_blank" rel="nofollow" class="fa fa-twitter"></a>
                            <a href="https://www.linkedin.com/shareArticle?mini=true&amp;url=&amp;title=&amp;summary=&amp;source=" target="_blank" rel="nofollow" class="fa fa-linkedin"></a>
                            <a href="https://pinterest.com/pin/create/button/?url=&amp;media=&amp;description=" target="_blank" rel="nofollow" class="fa fa-pinterest"></a>
                            <a href="https://reddit.com/submit/?url=&amp;resubmit=true&amp;title=" target="_blank" rel="nofollow" class="fa fa-reddit"></a>
                        </div>*@
                    <!--end share-->


                </div>
                <!--end data-new-->
            </div>

        </div>
        <!--end row-->
    </div>
    <!--end container-->
</div>
<!--end news-->


@section EndBody{

    <script>
        $('.carousel').carousel()
    </script>
    <script src="~/assets_NewPublic/libs/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/assets_NewPublic/libs/magnific-popup/lightbox.init.js"></script>


