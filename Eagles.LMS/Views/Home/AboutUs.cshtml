@if (setting.ShowTeams)
{
    <div class="gallery-section testimony-section ">
        <div class="team-section">
            <h2 class="mb-4 headh2">@Resources.Global.MeetOurTeam</h2>
            <div class="container">
                <div class="row ftco-animate">
                    <div class="col-md-12">
                        <div class="carousel-team owl-carousel ftco-owl">
                            @foreach (var team in teams)
                            {
                                <div class="item">
                                    <div class="testimony-wrap teamItem">
                                        <div>
                                            <img title="@team.NameEnglish" src="@team.Image" class="img-responsive" alt="@team.NameEnglish" />
                                            <div class="text">
                                                @if (en)
                                                {
                                                    <p class="mb-1 name">@team.NameEnglish</p>
                                                    <p class="job">@team.JobTitleEnglish</p>
                                                    @*<p class="job">@team.JobDescriptionEnglish</p>*@
                                                }
                                                else
                                                {
                                                    <p class="mb-1 name">@team.NameArabic</p>
                                                    <p class="job">@team.JobTitleArabic</p>
                                                    @*<p class="job">@team.JobDescriptionEnglish</p>*@
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}

