}*@


@section EndHeader{

    <style>
        .threecitizenimgadetails .images:hover .discription {
            background: #fff;
        }

            .threecitizenimgadetails .images:hover .discription h2 {
                color: #1e1f4e;
            }

            .threecitizenimgadetails .images:hover .discription p {
                color: #1e1f4e;
            }


        .menu li a.active-a3 {
            color: #af7a2c;
            border-bottom: 1px solid #fff0;
            font-weight: 500;
        }
    </style>
    <link href="~/assets_NewPublic/libs/magnific-popup/magnific-popup.css" rel="stylesheet" />



}













<div class="header-bc">

    <div class="ClassImaesBG">
        <img src="~/assets_NewPublic/images/bg/NEWBG/NewLocationBGin.jpg" />
    </div>
    <div class="PageTitleCOnt">
        <div class="container">
            <div class="row">

                <div class="col-md-8">

                    <div class="title-header">

                        @if (en)
                        {
                            <h3>@Model.TitleEnglish</h3>
                        }
                        else
                        {
                            <h3>@Model.TitleArabic</h3>

                        }

                        <div class="breadcrumbs">
                            <ul>
                                <li><a href="/Home">@Resources.Global.Home</a> > </li>
                                <li><a href="/Home/Locations">@Resources.Global.Locations</a></li>
                            </ul>
                        </div>
                        <!--end breadcrumb-->

                    </div>
                    <!--end title-header-->

                </div>
                <!--end col-6-->



            </div>
            <!--end row-->
        </div>
        <!--end container-->

    </div>
</div>
<!--end header-bc-->


<div class="threecitizenimgadetails servicesDetails" style="d">
    <div class="overlay">
        <div class="container">
            <div class="ciciccont">
                <div class="row justify-content-center">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="tititlelocation">
                            @if (en)
                            {
                                <h2>@Model.TitleEnglish</h2>
                            }
                            else
                            {
                                <h2>@Model.TitleArabic</h2>

                            }
                        </div>
                        <div class="bigimg images" style="margin-bottom: 30px;">
                            <!-- <img src="images/f1c.jpeg">-->
                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

                                <div class="carousel-inner popup-gallery" role="listbox">
                                    <div class="item active">
                                        @*<img src="@Model.MainImage" alt="...">*@
                                        <div class="CauroselItemImg">
                                            @if (!string.IsNullOrEmpty(Model.MainImage))
                                            {
                                                <a href="@Model.MainImage">
                                                    <div class=" imagsBG" style="background-image: url(@Model.MainImage)"></div>
                                                </a>
                                            }
                                            else
                                            {

                                                <a href="~/assets_NewPublic/images/f14.jpeg">
                                                    <div class=" imagsBG" style="background-image: url(/assets_NewPublic/images/f14.jpeg)"></div>
                                                </a>
                                            }

                                        </div>
                                    </div>
                                    @if (Model.LocationImages != null && Model.LocationImages.Any())
                                    {
                                        foreach (var item in Model.LocationImages)
                                        {
                                            <div class="item">
                                                @*<img src="@item.Path" alt="...">*@
                                                <div class="CauroselItemImg">
                                                    <a href="@item.Path">
                                                        <div class=" imagsBG" style="background-image: url(@item.Path)"></div>
                                                    </a>

                                                </div>
                                            </div>
                                        }
                                    }

                                </div>


                                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <!--
                                <div class="imagessSec">
                                    <img src="images/bg_1.jpg">
                                </div>
                            -->


                            <div class="discription">
                                @if (en)
                                {
                                    <h2>
                                        <span><i class="fas fa-map-marker-alt"></i></span>
                                        @Model.AddressEnglish
                                    </h2>
                                    <p>@Html.Raw(@Model.DescriptionEnglish)</p>
                                }
                                else
                                {
                                    <h2>
                                        <span><i class="fas fa-map-marker-alt"></i></span>
                                        @Model.AddressArabic
                                    </h2>
                                    <p>@Html.Raw(@Model.DescriptionArabic)</p>

                                }
                            </div>

                            @if (@Model.LocationVideo != null)
                            {
                                <div class="imagessSec">
                                    <div class="vedio">
                                        <iframe src="@Model.LocationVideo" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@section EndBody{
    <script>
        $('.carousel').carousel()
    </script>
    <script src="~/assets_NewPublic/libs/magnific-popup/jquery.magnific-popup.min.js"></script>
    <script src="~/assets_NewPublic/libs/magnific-popup/lightbox.init.js"></script>
}
