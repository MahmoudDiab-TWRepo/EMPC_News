
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    UnitOfWork ctx = new UnitOfWork();
    var SEO = ctx.SEOManager.GetAll().FirstOrDefault();
    //var allPictures = ctx.GalaryManager.GetAll().Where(s => s.IsImage).Select(s => s.AlbumId).Distinct();


    //var albums_img = ctx.AlbumManager.GetAll().OrderBy(s => s.Order).Where(s => allPictures.Contains(s.Id)).ToList();

    var allvideos = ctx.GalaryManager.GetAll().Where(s => !s.IsImage).Select(s => s.AlbumId).Distinct();

    var albums_videos = ctx.AlbumManager.GetAll().OrderBy(s => s.Order).Where(s => allvideos.Contains(s.Id)).ToList();

    //var vidoes = ctx.GalaryManager.GetAll().Where(s =>! s.IsImage).OrderBy(s => s.Order).ToList();

    Galary active_galary;
    bool en = true;

    if (Request.Cookies["Language"] != null)
    {
        en = (Request.Cookies["Language"].Value.ToString() == "en") ? true : false;

    }
    if (en == true)
    {
        albums_videos = albums_videos.Where(s => s.TitleEnglish != null).ToList();
    }
    else
    {
        albums_videos = albums_videos.Where(s => s.TitleArabic != null).ToList();

    }
    var Id = ViewBag.Id;
}







@if (en)
{
    @section PageTitle{
        @*<title>@SEO.VideoPageTitleEnglish</title>*@
        <title>Video Albums</title>
    }
    @section metatags{
        <meta name="keywords" content="@SEO.VideoPageMetaKeywordsEnglish " />
        <meta name="description" id="metaDesc" content="@SEO.VideoPageMetaDescriptionEnglish" />
        <link rel="canonical" id="canonicalUrl" href="@SEO.VideoPageCanonicalUrl" />
    }
}
else
{
    @section PageTitle{
        @*<title>@SEO.VideoPageTitleArabic</title>*@
        <title>البومات الفيديوهات</title>
    }
    @section metatags{
        <meta name="keywords" content="@SEO.VideoPageMetaKeywordsArabic " />
        <meta name="description" id="metaDesc" content="@SEO.VideoPageMetaDescriptionArabic" />
        <link rel="canonical" id="canonicalUrl" href="@SEO.VideoPageCanonicalUrl" />
    }
}










